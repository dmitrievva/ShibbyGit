<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui"> 
  <ribbon> 
    <tabs> 
      <tab id="CodeTab" label="VBA GIT"> 
        <group id="CodeUtils" label="Code Utils"> 
          <button id="ImportAllButton" label="Import Code" size="large" onAction="UI.ImportSelectedMsgBox" imageMso="ImportSavedImports" />
          <button id="ExportAllButton" label="Export Code" size="large" onAction="UI.ExportAllMsgBox" imageMso="ExportSavedExports" /> 
					<button id="GitImportButton" label="Git Import" size="large" onAction="UI.GitImportMsgBox" imageMso="ImportSavedImports" />  
					<button id="GitExportButton" label="Git Export" size="large" onAction="UI.GitExportMsgBox" imageMso="ExportSavedExports" /> 
          <button id="GitExportAndCommitButton" label="Export Code and Commit" size="large" onAction="UI.GitExportAndCommit" imageMso="ExportMoreMenu" />  
        </group > 
				
        <group id="Git" label="Git"> 
					<button id="GitInitButton" label="Git Init"  onAction="UI.DoGitInit" imageMso="FileManageMenu" />	  
          <button id="GitConsoleButton" label="Git Console"  onAction="UI.ShowGitOtherForm" imageMso="FileManageMenu" />	  
					<button id="GitCommitButton" label="Commit" onAction="UI.ShowGitCommitForm" imageMso="FileManageMenu" /> 
					<button id="GitStatusButton" label="Status" onAction="UI.DoGitStatus" imageMso="FileManageMenu" />
					<button id="GitLogButton" label="Log" onAction="UI.DoGitLog" imageMso="FileManageMenu" />
					<button id="GitAddAllButton" label="Add All" onAction="UI.DoGitAddAll" imageMso="FileManageMenu" />
					<button id="GitRemoteButton" label="Remotes" onAction="UI.ShowGitRemoteForm" imageMso="FileManageMenu" />
					<button id="GitTreeButton" label="Git Tree" size="large" onAction="UI.ShowGitTreeForm" imageMso="GroupAdpDiagramLayout" />

					<button id="GitSettingsButton" label="Git Settings" size="large" onAction="UI.ShowGitSettingsForm" imageMso="FileManageMenu" />
        </group > 
      </tab> 
    </tabs> 
  </ribbon> 
</customUI> 